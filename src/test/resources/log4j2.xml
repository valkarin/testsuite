<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%highlight{%d [%t] [%C{1}] %-5level: %msg%n%throwable}{FATAL=red bold, ERROR=red, WARN=yellow, INFO=blue, DEBUG=white bold, TRACE=white}"
                    disableAnsi="false"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.finalcoder.testsuite" level="trace"/>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>